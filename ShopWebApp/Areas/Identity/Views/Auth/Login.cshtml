﻿﻿
@model LoginVM

<div class="container p-4 col-lg-5">
    <form method="post" class="m-3">
            <h3>Log In</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Username -->
            <div class="form-group mb-3">
                <label asp-for="Credential.Email"></label>
                <input asp-for="Credential.Email" class="form-control" />
                <span asp-validation-for="Credential.Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="form-group mb-3">﻿
            <label asp-for="Credential.Password"></label>
                <input asp-for="Credential.Password" class="form-control" />
            <span asp-validation-for="Credential.Password" class="text-danger"></span>
            </div>

            <div class="d-flex">
            <a asp-action="signup" class="btn btn-link w-100">New user? Register</a>
                <button type="submit" class="btn btn-primary w-100 ms-2">Log In</button>
            </div>

    </form>
</div>

@section Scripts {
    @{
                <partial name="_ValidationScriptsPartial" />
    }
}