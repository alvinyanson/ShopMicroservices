@model IEnumerable<CategoryDto>

<div class="row mb-3">
    <div class="col-auto text-end">
        <a asp-action="Create" class="btn btn-sm btn-outline-primary">
            Create New Category
        </a>
    </div>
</div>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-6 col-sm-4 col-lg-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4">@product.Name</h5>
                    <a asp-action="Create" asp-route-id="@product.Id" class="btn btn-outline-primary btn-sm">
                        Edit
                    </a>
                    <a onClick="Delete('/Admin/Categories/Delete/@product.Id')" class="btn btn-primary btn-sm">Delete</a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/category.js"></script>
}
