@model IEnumerable<ReadProductDto>


<div class="row mb-3">
    <div class="col-auto text-end">
        <a asp-action="Create" class="btn btn-sm btn-outline-primary">
            Create New Product
        </a>
    </div>
</div>


<div class="row">
    @foreach (var product in Model.OrderByDescending(product => product.Id))
    {
        <div class="col-6 col-sm-4 col-lg-3 col-xl-2 mb-4">
            @if (!string.IsNullOrEmpty(product.ImageUrl))
            {
                <img src="@product.ImageUrl" class="rounded-4" style="object-fit: cover; height: 200px">
            }
            else
            {
                <img src="https://placehold.co/200x200/png" class="card-img-top rounded" />
            }

            <div class="mt-2">
                <span class="d-block">@product.Name</span>
                <span class="d-block fw-bold">@product.Price.ToString("c")</span>
                <div class="d-flex mt-2">
                    <a asp-action="Create" asp-route-id="@product.Id" class="btn btn-outline-primary btn-sm">
                        Edit
                    </a>
                    <a onClick="Delete('/Admin/Products/Delete/@product.Id')" class="btn btn-primary btn-sm ms-2 me-auto">Delete</a>
                </div>
            </div>
        </div>
    }

</div>

@section Scripts {
    <script src="~/js/product.js"></script>
}